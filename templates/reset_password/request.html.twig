{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="display-6 fw-bold text-body-emphasis">Réinitialiser votre mot de passe</h1>

    <div class="mt-4">
        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div class="mb-3">
            <small>
                Saisissez votre e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer l'e-mail de réinitialisation du mot de passe</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
