{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

    <h1 class="display-6 fw-bold text-body-emphasis">Réinitialiser votre mot de passe</h1>

    <div class="row mt-4">
        <div class="col-lg-6">
            {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <button class="btn btn-primary mt-3">Réinitialiser</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
